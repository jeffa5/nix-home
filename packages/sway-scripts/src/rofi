#!/usr/bin/env bash

rofi_return() {
    error=$(rofi -modi run -show run 2>&1)

    # if rofi returned an error then show it to the user
    if [ -n "$error" ]; then
        notify-send --urgency=critical "Rofi" "$error"
    fi
}

# if rofi is running, kill it. Otherwise run it
pgrep rofi && pkill rofi || rofi_return
